{
  "manifest_version": 2,

  "name": "Tributary",
  "description": "Multi-stream source playlist platform",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "contextMenus"
  ],
  "icons": {
      "16": "icon-bitty.png"
  },
  "background": {
      "scripts": ["background.js"]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
