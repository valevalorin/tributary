{
  "manifest_version": 2,

  "name": "StreamMan",
  "description": "Multisite streaming playlist support",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "contextMenus"
  ],
  "icons": {
      "16": "icon-bitty.png"
  },
  "background": {
      "scripts": ["background.js"]
  }
}
